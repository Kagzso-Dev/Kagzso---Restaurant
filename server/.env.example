# ─── KAGZSO POS: Environment Configuration ────────────────────────────────
# Copy this file to .env and fill in your values
# On Render: add these as Environment Variables in the dashboard (not a .env file)

# ── Server ──
PORT=5000
# Render injects PORT automatically — do not override it on Render
NODE_ENV=production

# URL of your deployed Netlify frontend (no trailing slash)
# Example: https://kagzso-restaurant.netlify.app
CLIENT_URL=https://your-app.netlify.app

# Render sits behind a reverse proxy — keep this at 1
TRUST_PROXY=1

# ── Security ──
# Use a long random string (32+ chars) — never commit the real value
JWT_SECRET=replace_with_a_long_random_secret

# Rate limiting — requests per minute per IP (default 300)
RATE_LIMIT_MAX=300

# ── Database (MongoDB Atlas) ──
# Get this from Atlas → Connect → Drivers
MONGO_URI=mongodb+srv://rraghul683_db_user:Ragul%402026@work.vwkwdrv.mongodb.net/?appName=work

# MongoDB read preference
MONGO_READ_PREF=primaryPreferred

# Connection pool size
MONGO_POOL_SIZE=10

# ── Logging ──
LOG_LEVEL=info
LOG_DIR=./logs
MONGO_DEBUG=false
