# ─── KAGZSO POS: Environment Configuration Example ────────────────────────
# Copy this file to .env and fill in your values

# ── Server ──
PORT=5000
NODE_ENV=production
# URL of your frontend (for CORS)
CLIENT_URL=http://localhost:5173 
# Trusted proxy (number of hops like Nginx/Cloudflare)
TRUST_PROXY=1

# ── Security ──
# Secret key for JWT signing
JWT_SECRET=supersecretkey123
# Rate limiting
RATE_LIMIT_MAX=300

# ── Database ──
# MongoDB connection string
MONGO_URI=mongodb+srv://rraghul683_db_user:Ragul%402026@work.vwkwdrv.mongodb.net/?appName=work
# Read preference (primaryPreferred or secondaryPreferred)
MONGO_READ_PREF=primaryPreferred
# Connection pool size (max concurrent DB connections)
MONGO_POOL_SIZE=20

# ── Scalability (Optional) ──
# Redis connection string for Socket.IO multi-node clustering
REDIS_URL=redis://localhost:6379

# ── Logging ──
# Log level (debug, info, warn, error)
LOG_LEVEL=info
# Log directory path
LOG_DIR=./logs
# Enable Mongoose query logging (true/false)
MONGO_DEBUG=false
